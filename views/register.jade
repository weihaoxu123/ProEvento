script.
    var onClick=function(){
        if(document.getElementById('input1').value==""||document.getElementById('input2').value==""||document.getElementById('input3').value==""){
            alert("input can't be empty!")
            return
        }
        if(document.getElementById('input2').value!=document.getElementById('input3').value){
            alert("password doesn't match")
            return
        }
        var userName=document.getElementById('input1').value
        var password=document.getElementById('input2').value
        $.post("/register",{
            userName:userName,
            password:password
        },function(data,satus){
            if(data.code==200){
                window.location.replace("/");
            }
            else if(data.code==1){
                alert("user already existed!")
            }
        })
    }

body
    div.formContent
        h2 Welcome To ProEvento
        p User Name
        input#input1(type="text",Name="username")
        p Password
        input#input2(type="password",Name="pwd")
        p Confirm Password
        input#input3(type="password",Name="pwd")
        br
        button.login(type='submit',value='Register',onClick="onClick()") Sign Up
        div.link
            a(href="/login",title="Register") Already have an account? Login here!

